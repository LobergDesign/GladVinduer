@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ServicePage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Shared/_Layout.cshtml";
    var allServices = Model.Content.Children<ServiceItems>();

}

<div class="top-banner cover" style="background-image: url('@Model.Content.ServiceImage.Url')">
    <div class="img-overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-push-1">
                <div class="top-banner-content">
                    <h1>@Model.Content.ServiceHeadline</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-push-1">
            @Model.Content.ServiceBodytext
        </div>
    </div>
    <div class="service-list">
        <div class="row">
            @foreach (var item in allServices)
            {
                <div class="col-xs-6">
                    <h3>@item.ServiceItemHeadline</h3>
                    <p>@item.ServiceItemBodytext</p>
                </div>
            }
        </div>
    </div>
    <div class="row main-setion">
        @Html.Action("simpleContact", "ServicePage")
    </div>
    <div class="service-list main-setion">
        <div class="row">
            <div class="col-xs-12">
                <h2>All messeges from Umbraco</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var item in CurrentPage.Children("ContactMessage"))
            {
                <div class="col-xs-12">
                    <h3>@item.ContactFormName</h3>
                    <p>@item.ContactFormEmail</p>
                    <p>@item.ContactFormMessage</p>
                </div>
            }
        </div>
    </div>
</div>