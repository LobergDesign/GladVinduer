@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Textpage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Shared/_Layout.cshtml";
}

<div class="top-banner" style="background-image: url('@Model.Content.BannerImage.Url')">
    <div class="img-overlay"></div>

    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-push-1">
                <div class="top-banner-content">
                    <h1>@Model.Content.BannerHeadline</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="main-pages">
    <div class="grid">
        @CurrentPage.GetGridHtml("gridContent")
    </div>
</div>