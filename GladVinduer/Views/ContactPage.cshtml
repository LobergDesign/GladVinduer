@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ContactPage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Shared/_Layout.cshtml";
}

<div class="top-banner cover" style="background-image: url('@Model.Content.BannerImage.Url')">
    <div class="img-overlay"></div>

    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-push-1">
                <div class="top-banner-content">
                    <h1>@Model.Content.BannerHeadline</h1>
                    <span>+45 53 83 34 66</span>
                    <a href="mailto:morten@gladvinduer.dk">morten@gladvinduer.dk</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="main-pages">
    <div class="grid">
        @CurrentPage.GetGridHtml("gridContent")
    </div>
    <div class="container hidden">
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-md-6">
                @Html.Action("simpleContact", "ContactPage")
            </div>
        </div>
    </div>
                    

</div>

